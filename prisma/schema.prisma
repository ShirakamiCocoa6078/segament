generator client {
  provider = "prisma-client-js"
}

//Vercel Postgres DB 연결 정보를 추가합니다.
datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}
model User {
  id             String    @id @default(cuid())
  name           String?
  // email은 Google 연동 시에만 저장되며, null이 아닐 경우 고유해야 합니다.
  email          String?   @unique
  emailVerified  DateTime?
  image          String?
  
  // username은 모든 유저에게 필수이며, 로그인 시 사용됩니다.
  username       String    @unique
  // nickname은 대시보드 등에서 표시될 이름입니다.
  nickname       String?
  hashedPassword String?   // 비밀번호는 해싱하여 저장합니다.

  accounts Account[]
  sessions Session[]
}

model Account {
  id                 String  @id @default(cuid())
  userId             String
  type               String
  provider           String
  providerAccountId  String
  refresh_token      String?
  access_token       String?
  expires_at         Int?
  token_type         String?
  scope              String?
  id_token           String?
  session_state      String?

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
}